{{page-title "Login"}}

<div class="flex flex-col items-center pt-10">
    <div class="bg-white shadow-md rounded-md p-8 w-1/3">
        <h1 class="text-3xl font-bold text-center text-red-500 mb-4">Login Customer</h1>
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">Username</label>
            <input {{on "keyup" this.updateData}}
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                id="username" type="text" placeholder="Enter your username" value="{{this.loginReq.username}}">
        </div>
        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="password">Password</label>
            <input {{on "keyup" this.updateData}}
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                id="password" type="password" placeholder="Enter your password" value="{{this.loginReq.password}}">
        </div>
        <div class="flex justify-center">
            <button type="button" {{on "click" this.doLogin}} class="{{if this.isValid " bg-red-500" "bg-gray-500" }}
                text-white px-8 py-2 rounded-full focus:outline-none transform transition duration-300
                hover:scale-105">Login</button>
        </div>
    </div>
</div>
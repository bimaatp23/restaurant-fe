{{page-title "Cart"}}

<div class="flex flex-col items-center pt-10">
    <div class="bg-white shadow-md rounded-md p-8 w-1/2">
        <h1 class="text-3xl font-bold text-center text-red-500 mb-4">Your Cart</h1>

        {{#if this.cart.cartCount}}
        <div class="overflow-x-auto">
            <table class="table-auto w-full">
                <thead>
                    <tr>
                        <th class="border px-4 py-2">Name</th>
                        <th class="border px-4 py-2">Price</th>
                        <th class="border px-4 py-2">Quantity</th>
                        <th class="border px-4 py-2">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each this.cart.activeCart as |cart|}}
                    <tr>
                        <td class="border px-4 py-2">{{cart.name}}</td>
                        <td class="border px-4 py-2 text-center">$ {{cart.price}}</td>
                        <td class="border py-2 text-center flex flex-row justify-center items-center space-x-6">
                            <button {{on "click" (fn this.decreaseQuantity cart)}} class="font-bold text-2xl"
                                type="button">-</button>
                            <p>{{cart.quantity}}</p>
                            <button {{on "click" (fn this.increaseQuantity cart)}} class="font-bold text-2xl"
                                type="button">+</button>
                        </td>
                        <td class="border px-4 py-2 text-center">$ {{cart.subtotal}}</td>
                    </tr>
                    {{/each}}
                    <tr>
                        <td class="border px-4 py-2" colspan="2"></td>
                        <td class="border px-4 py-2 text-center font-bold">Total</td>
                        <td class="border px-4 py-2 text-center font-bold">$ {{this.total}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="flex justify-center mt-4">
            <button type="button" {{on "click" this.checkout}}
                class="bg-red-500 text-white px-8 py-2 rounded-full focus:outline-none transform transition duration-300 hover:scale-105">
                Checkout
            </button>
        </div>
        {{else}}
        <p class="text-gray-600 text-center">Your cart is empty.</p>
        {{/if}}
    </div>
</div>